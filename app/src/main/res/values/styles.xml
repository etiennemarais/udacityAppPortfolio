<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/blue_grey_100</item>
        <item name="android:buttonStyle">@style/AppButtons</item>
    </style>

    <style name="AppButtons" parent="android:Widget.Material.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/orange_300</item>
    </style>

    <style name="AppRedButtons" parent="AppButtons">
        <item name="android:background">@color/deep_orange_900</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/blue_grey_100</item>
    </style>

    <style name="buttonMargins">
        <item name="android:layout_marginTop">10dp</item>
    </style>

</resources>
